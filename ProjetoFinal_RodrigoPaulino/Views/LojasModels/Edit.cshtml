@model ProjetoFinal_RodrigoPaulino.Models.LojasModel

@{
    ViewData["Title"] = "Editar Informações";
}

<h1>Editar Cadastro</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seguimento" class="control-label"></label>
                <input asp-for="Seguimento" class="form-control" />
                <span asp-validation-for="Seguimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
               <input type="submit" value="Salvar Alterações" class="btn btn-success"/>
                 <a class="btn btn-dark" asp-action="Index">Voltar a lista</a>
            </div>
        </form>
    </div>
</div>
<div>
    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
