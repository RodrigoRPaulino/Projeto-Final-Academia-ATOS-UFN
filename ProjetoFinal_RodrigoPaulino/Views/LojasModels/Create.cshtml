@model ProjetoFinal_RodrigoPaulino.Models.LojasModel

@{
    ViewData["Title"] = "Cadastro de lojas";
}



<h1>Nova Loja</h1>
<hr />
<div class="text-black">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seguimento" class="control-label"></label>
                <input asp-for="Seguimento" class="form-control" />
                <span asp-validation-for="Seguimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
                 <a class="btn btn-dark" asp-action="Index">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>
<br>
<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
